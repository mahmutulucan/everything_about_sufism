# Django Secret Key
DJANGO_SECRET_KEY=your_secret_key_here

# Debug mode
DEBUG=True

# CSRF & Security settings 
# (default to False for development, adjust in production)
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=False
SECURE_CONTENT_TYPE_NOSNIFF=False
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False

# Email configuration (Gmail example)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password_here
DEFAULT_FROM_EMAIL=your_default_from_email@example.com

# Contact email(s)
CONTACT_EMAILS=contact1@example.com, contact2@example.com

# Other Django settings (optional)
ALLOWED_HOSTS=127.0.0.1,localhost

# Database configuration

# SQLite configuration (default for local development)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3  # SQLite database file (default name)

# If you prefer PostgreSQL, MySQL, or another database, 
# uncomment and configure the following:

# PostgreSQL connection URL
# DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>

# If using PostgreSQL directly (uncomment to use PostgreSQL)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=<DB_NAME>  # Example: my_database_name
# DATABASE_USER=<DB_USER>  # Example: my_database_user
# DATABASE_PASSWORD=<DB_PASSWORD>  # Example: my_secure_password
# DATABASE_HOST=<DB_HOST>  # Example: randomhost12345.com
# DATABASE_PORT=<DB_PORT>  # Example: 5432

# If using MySQL directly (uncomment to use MySQL)
# DATABASE_ENGINE=django.db.backends.mysql
# DATABASE_NAME=<DB_NAME>  # Example: my_database_name
# DATABASE_USER=<DB_USER>  # Example: my_database_user
# DATABASE_PASSWORD=<DB_PASSWORD>  # Example: my_secure_password
# DATABASE_HOST=<DB_HOST>  # Example: randomhost12345.com
# DATABASE_PORT=<DB_PORT>  # Example: 3306
